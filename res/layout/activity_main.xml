<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >

        <ImageSwitcher
            android:id="@+id/imageSwitcher1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_image" >
        </ImageSwitcher>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|center_horizontal" >

            <ImageButton
                android:id="@+id/ImageButtonHotels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hotels_btn" />

            <ImageButton
                android:id="@+id/ImageButtonHoliday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/holidays_btn" />

            <ImageButton
                android:id="@+id/ImageButtonFlights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/flights_btn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal" >

            <ImageButton
                android:id="@+id/ImageButtonBus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bus_btn" />

            <ImageButton
                android:id="@+id/ImageButtonOffers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/offers_btn" />

            <ImageButton
                android:id="@+id/imageButtonKashmirTours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/kashmir_tours_btn" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>