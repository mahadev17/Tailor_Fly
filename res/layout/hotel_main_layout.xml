<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/step_1_select_bg"
            android:orientation="vertical"
            android:padding="10dp"
            android:tileMode="repeat" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Find a hotel near a city, landmark, or airport:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/Steel_Blue"
                android:textSize="14sp" />

            <AutoCompleteTextView
                android:id="@+id/atxtCityList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Type somethingâ€¦."
                android:lines="1" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/step_1_select_bg"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:tileMode="repeat" >

            <LinearLayout
                android:id="@+id/layoutCheckIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:dividerPadding="5dp"
                android:orientation="vertical"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/TextView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check-in"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/Steel_Blue"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ImageView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/calender_icon" />

                    <TextView
                        android:id="@+id/txtHotelCheckInDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="top"
                        android:text="25"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="34sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical"
                        android:paddingLeft="5dp" >

                        <TextView
                            android:id="@+id/txtHotelCheckInMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="July 13"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/txtHotelCheckInDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Monday)"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/Orange"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_straight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layoutCheckOut"
                android:dividerPadding="5dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check-out"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/Steel_Blue"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/calender_icon" />

                    <TextView
                        android:id="@+id/txtHotelCheckOutDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="25"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="34sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical"
                        android:paddingLeft="5dp" >

                        <TextView
                            android:id="@+id/txtHotelCheckOutMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="July 13"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/txtHotelCheckOutDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Monday)"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/Orange"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
		<ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/divider" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/step_1_select_bg"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" 
            android:tileMode="repeat">

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adult(18+)"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/Steel_Blue"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinnerAdults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/Passengers" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ImageView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_straight" />

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:dividerPadding="5dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/TextView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Children(0-17)"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/Steel_Blue"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinnerChildren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/Passengers" />

            </LinearLayout>
        </LinearLayout>
		<ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/divider" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp" >

            <ImageButton
                android:id="@+id/imgBtnGo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/go_btn" />

        </LinearLayout>

    </LinearLayout>
    

</ScrollView>